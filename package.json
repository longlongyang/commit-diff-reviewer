{
  "name": "commit-diff-reviewer",
  "displayName": "Commit Diff Reviewer",
  "description": "Interactive commit difference reviewer with accept/reject functionality",
  "version": "0.2.7",
  "publisher": "yanglonglong",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/longlongyang/commit-diff-reviewer.git"
  },
  "homepage": "https://github.com/longlongyang/commit-diff-reviewer#readme",
  "bugs": {
    "url": "https://github.com/longlongyang/commit-diff-reviewer/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "diff",
    "review",
    "commit",
    "code review"
  ],
  "activationEvents": [
    "onCommand:commitDiffReviewer.selectCommit",
    "onCommand:commitDiffReviewer.showStatusMenu",
    "onCommand:commitDiffReviewer.addNote",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitDiffReviewer.selectCommit",
        "title": "Select Commit to Review",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.nextChange",
        "title": "Go to Next Change",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.prevChange",
        "title": "Go to Previous Change",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.acceptChange",
        "title": "Accept Current Change",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.rejectChange",
        "title": "Reject Current Change",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.acceptAll",
        "title": "Accept All Changes",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.rejectAll",
        "title": "Reject All Changes",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.showStatusMenu",
        "title": "Show Review Menu",
        "icon": "$(list-unordered)"
      },
      {
        "command": "commitDiffReviewer.endSession",
        "title": "End Review Session",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.addNote",
        "title": "Add Review Note",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.editNote",
        "title": "Edit Review Note",
        "icon": "$(edit)",
        "category": "Commit Diff Reviewer"
      },
      {
        "command": "commitDiffReviewer.resolveNote",
        "title": "Resolve Review Note",
        "icon": "$(check)",
        "category": "Commit Diff Reviewer"
      }
    ],
    "keybindings": [
      {
        "command": "commitDiffReviewer.nextChange",
        "key": "alt+]",
        "when": "commitDiffReviewer.inSession"
      },
      {
        "command": "commitDiffReviewer.nextChange",
        "key": "shift+f7",
        "when": "commitDiffReviewer.inSession"
      },
      {
        "command": "commitDiffReviewer.prevChange",
        "key": "alt+[",
        "when": "commitDiffReviewer.inSession"
      },
      {
        "command": "commitDiffReviewer.prevChange",
        "key": "f7",
        "when": "commitDiffReviewer.inSession"
      },
      {
        "command": "commitDiffReviewer.acceptChange",
        "key": "alt+a",
        "when": "commitDiffReviewer.inSession"
      },
      {
        "command": "commitDiffReviewer.rejectChange",
        "key": "alt+r",
        "when": "commitDiffReviewer.inSession"
      }
    ],
    "configuration": {
      "title": "Commit Diff Reviewer",
      "properties": {
        "commitDiffReviewer.maxCommitsInList": {
          "type": "number",
          "default": 20,
          "description": "Number of recent commits to show in the selection list"
        },
        "commitDiffReviewer.autoNavigation": {
          "type": "boolean",
          "default": true,
          "description": "Automatically jump to the next pending change after accepting or rejecting a change."
        },
        "commitDiffReviewer.deleteNoteOnResolve": {
          "type": "boolean",
          "default": true,
          "description": "Automatically delete notes when they are resolved."
        },
        "commitDiffReviewer.highlightColors": {
          "type": "object",
          "default": {
            "added": "rgba(46, 160, 67, 0.25)",
            "deleted": "rgba(248, 81, 73, 0.25)",
            "modified": "rgba(210, 153, 34, 0.25)"
          },
          "description": "Colors for diff highlighting"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "commitDiffReviewer.addNote",
          "group": "modification@1",
          "when": "editorTextFocus"
        },
        {
          "command": "commitDiffReviewer.editNote",
          "group": "modification@2",
          "when": "commitDiffReviewer.inSession && editorTextFocus"
        },
        {
          "command": "commitDiffReviewer.resolveNote",
          "group": "modification@3",
          "when": "commitDiffReviewer.inSession && editorTextFocus"
        }
      ],
      "comments/comment/title": [
        {
          "command": "commitDiffReviewer.editNote",
          "group": "navigation",
          "when": "commentController == commitDiffReviewer"
        },
        {
          "command": "commitDiffReviewer.resolveNote",
          "group": "navigation",
          "when": "commentController == commitDiffReviewer"
        }
      ],
      "comments/comment/context": [
        {
          "command": "commitDiffReviewer.editNote",
          "group": "modification",
          "when": "commentController == commitDiffReviewer"
        },
        {
          "command": "commitDiffReviewer.resolveNote",
          "group": "modification",
          "when": "commentController == commitDiffReviewer"
        }
      ]
    }
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  }
}